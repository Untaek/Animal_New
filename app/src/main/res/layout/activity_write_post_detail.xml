<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="androidx.databinding.ObservableField"/>
        <import type="io.untaek.animal_new.component.ComponentUtilKt"/>
        <variable name="content" type="io.untaek.animal_new.type.Content"/>
        <variable name="description" type="ObservableField&lt;String&gt;"/>
        <variable name="tags" type="ObservableField&lt;java.util.List&lt;String&gt;&gt;"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.WritePostDetailActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="#eee"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/con"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                    android:onClick="@{(v) -> ComponentUtilKt.makeUploadIntent(v, content, description, tags)}"
                    android:layout_width="42dp"
                    android:layout_height="34dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/frameLayout5">
                <TextView
                        android:textSize="16sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_width="match_parent" android:layout_height="match_parent"
                        android:text="Post"/>
            </FrameLayout>
            <FrameLayout
                    android:onClick="@{ComponentUtilKt::back}"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/frameLayout6">

            </FrameLayout>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/con" app:layout_constraintBottom_toBottomOf="parent"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                            android:layout_gravity="center"
                            content="@{content}"
                            android:minHeight="150dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView2"/>
                </FrameLayout>
                <EditText
                        android:onClick="@{(a) -> ComponentUtilKt.scrollBottom(scrollView)}"
                        android:onTextChanged="@{(a,b,c,d) -> ComponentUtilKt.scrollBottom(scrollView)}"
                        android:hint="Description"
                        android:text="@={description}"
                        android:gravity="top"
                        android:minLines="2"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:background="#eee"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/editText_desc"/>
                <me.originqiu.library.EditTag
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/editText_desc"
                        android:id="@+id/editTag" app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingBottom="24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>