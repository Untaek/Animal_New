<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="vm" type="io.untaek.animal_new.viewmodel.PostDetailViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                content="@{vm.post.content}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/imageView2"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_userImage_myPage" android:id="@+id/constraintLayout4">
            <FrameLayout
                    android:onClick="@{(v) -> vm.download(v, vm.post.content)}"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/ic_file_download_black_24dp"
                    android:layout_width="34dp" android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
            <io.untaek.animal_new.component.TextWithIcon
                    app:icon="@drawable/ic_bone"
                    app:count="0"
                    app:color="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/textWithIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>

            <io.untaek.animal_new.component.TextWithIcon
                    app:icon="@drawable/ic_chat_black_24dp"
                    app:count="0"
                    app:color="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
                    android:id="@+id/textWithIcon2"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/textWithIcon"
                    android:layout_marginStart="8dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>