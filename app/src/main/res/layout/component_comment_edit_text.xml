<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="vm" type="io.untaek.animal_new.viewmodel.PostDetailViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#eee"
            android:outlineProvider="bounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                onActionClicked="@{vm}"
                android:text="@={vm.commentText}"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_margin="0dp"
                android:hint="Comment"
                android:lines="1"
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/editText" app:layout_constraintEnd_toStartOf="@+id/frameLayout2"
                android:layout_marginEnd="8dp" android:inputType="text"/>
        <FrameLayout
                android:onClick="@{(v) -> vm.sendNewComment()}"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content" android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/frameLayout2">
            <TextView android:gravity="center" android:layout_width="match_parent"
                      android:layout_height="match_parent" android:text="Submit"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>