<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="post" type="io.untaek.animal_new.type.Post"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
    >

        <TextView
                android:text="@{post.user.userName}"
                android:layout_width="0dp"
                android:layout_height="20dp" android:id="@+id/textView_userName_timeline_item"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/imageView_userImage_timeline_item"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/textView_timeStamp_timeline_item"
                android:layout_marginEnd="10dp"/>
        <ImageView
                url="@{post.user.userImage}"
                android:layout_width="40dp"
                android:layout_height="40dp" app:srcCompat="@drawable/border" android:id="@+id/imageView_userImage_timeline_item"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"/>
        <ImageView
                url="@{post.content.url}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp" android:id="@+id/imageView_contentImage_timeline_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_userName_timeline_item"/>

        <TextView
                time="@{post.time_stamp}"
                android:layout_width="50dp"
                android:layout_height="20dp" android:id="@+id/textView_timeStamp_timeline_item"
                android:gravity="right" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/imageView_contentImage_timeline_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp">
            <TextView
                    android:text="@{post.description}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_description_timeline_item"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:text="Button"
                    android:layout_width="60dp"
                    android:layout_height="40dp" android:id="@+id/button_follow_timeline_item"
                    app:layout_constraintEnd_toStartOf="@+id/textView_followCount_timeline_item"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_description_timeline_item"
                    android:layout_marginEnd="10dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="50dp"
                    android:layout_height="20dp" android:id="@+id/textView_boneCount_timeline_item"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_description_timeline_item"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>
            <ImageView
                    android:src="@drawable/ic_fill_bone"
                    android:layout_width="60dp"
                    android:layout_height="40dp" android:id="@+id/button_bone_timeline_item"
                    app:layout_constraintEnd_toStartOf="@+id/textView_boneCount_timeline_item"
                    android:layout_marginEnd="10dp" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_description_timeline_item"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="50dp"
                    android:layout_height="20dp" android:id="@+id/textView_followCount_timeline_item"
                    app:layout_constraintEnd_toStartOf="@+id/button_bone_timeline_item"
                    android:layout_marginEnd="10dp" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_description_timeline_item"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>