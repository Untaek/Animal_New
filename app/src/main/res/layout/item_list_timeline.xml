<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="handler" type="io.untaek.animal_new.list.TimelineAdapter.Handler"/>
        <variable name="post" type="io.untaek.animal_new.type.Post"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="56dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="0dp"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/constraintLayout">

            <TextView
                    time="@{post.time_stamp}"
                    android:layout_width="50dp"
                    android:layout_height="20dp" android:id="@+id/textView_timeStamp_timeline_item"
                    android:gravity="right" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                    android:layout_marginEnd="30dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>
            <TextView
                    android:onClick="@{(v) -> handler.onClickUserImageAndName(v, post)}"
                    android:text="@{post.user.name}"
                    android:layout_width="0dp"
                    android:layout_height="20dp" android:id="@+id/textView_userName_timeline_item"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView_userImage_timeline_item"
                    android:layout_marginStart="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/textView_timeStamp_timeline_item"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                    android:onClick="@{(v) -> handler.onClickUserImageAndName(v, post)}"
                    user_image="@{post.user.picture_url}"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:id="@+id/imageView_userImage_timeline_item"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
                android:onClick="@{(v) -> handler.onClickContent(v, post)}"
                content="@{post.content}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp" android:id="@+id/imageView_contentImage_timeline_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/imageView_contentImage_timeline_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">
            <ImageView
                    android:text="Button"
                    android:layout_width="36dp"
                    android:layout_height="36dp" android:id="@+id/button_follow_timeline_item"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_bone_timeline_item" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="@{String.valueOf(post.total_likes)}"
                    android:layout_width="50dp"
                    android:layout_height="20dp" android:id="@+id/textView_boneCount_timeline_item"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/button_bone_timeline_item"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
            <ImageView
                    android:onClick="@{(v) -> handler.onClickLike(v, post)}"
                    android:src="@drawable/ic_fill_bone"
                    android:layout_width="36dp"
                    android:layout_height="36dp" android:id="@+id/button_bone_timeline_item"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="@{String.valueOf(post.total_comments)}"
                    android:layout_width="50dp"
                    android:layout_height="20dp" android:id="@+id/textView_followCount_timeline_item"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/button_follow_timeline_item"
                    app:layout_constraintEnd_toStartOf="@+id/textView_boneCount_timeline_item"
                    android:layout_marginEnd="8dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="#dddddd"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_followCount_timeline_item"
                    app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                        android:text="@{post.description}"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/textView_description_timeline_item"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>